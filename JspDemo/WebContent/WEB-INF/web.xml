<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	
	
	<!-- 中文过滤 -->
	<filter>
        <filter-name>Set Character Encoding</filter-name>
        <filter-class>my.ly.release.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>    
    <filter-mapping>
        <filter-name>Set Character Encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    
    <!-- 是否登录过滤 -->
    <filter>
    	<filter-name>sessionfilter</filter-name>
    	<filter-class>my.ly.release.filters.SessionFilter</filter-class>
    	<init-param>    
			<param-name>excludedPages</param-name>    
			<param-value>/login.jsp,/LoginCheck</param-value>    
		</init-param>
    </filter>
    <filter-mapping>
    	<filter-name>sessionfilter</filter-name>
    	<url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 可以并行使用 过滤  ,
    		由于需要过滤的太多内容，不建议使用 一一添加的方式处理。
    <filter-mapping>   
        <filter-name>sessionfilter</filter-name>   
        <url-pattern>/Enter/*</url-pattern>   
    </filter-mapping>   
    <filter-mapping>   
        <filter-name>sessionfilter</filter-name>   
        <url-pattern>/oper/*</url-pattern>   
    </filter-mapping>
    <filter-mapping>   
        <filter-name>sessionfilter</filter-name>   
        <url-pattern>/css/*</url-pattern>   
    </filter-mapping>  
    <filter-mapping>   
        <filter-name>sessionfilter</filter-name>   
        <url-pattern>/img/*</url-pattern>   
    </filter-mapping>
    <filter-mapping>   
        <filter-name>sessionfilter</filter-name>   
        <url-pattern>/js/*</url-pattern>   
    </filter-mapping>
     --> 
     
     

	<!-- display tag  -->
	<filter> 
		<filter-name>exportFilter</filter-name> 
		<filter-class>org.displaytag.filter.ResponseOverrideFilter</filter-class> 
	</filter> 
    
	
	
	<servlet>
	    <servlet-name>LoginCheck</servlet-name>
	    <servlet-class>servlet.AdminLoginCheck</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>LoginCheck</servlet-name>
    	<url-pattern>/LoginCheck</url-pattern>
  	</servlet-mapping>
    
 
</web-app>
